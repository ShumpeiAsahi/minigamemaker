{
    "meta": { "width": 540, "height": 960, "bgColor": "#1099bb", "loopMs": 4000 },
    "assets": [
      { "id": "btn", "url": "/game_kakin.png" }
    ],
    "objects": [
      { "id": "button", "asset": "btn", "x": 270, "y": 480, "anchor": 0.5, "interactive": true }
