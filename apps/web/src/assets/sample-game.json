  "assets": [
    { "id": "btn", "url": "/game_kakin.png" }
  ],
  "objects": [
    {
      "id": "button",
      "name": "ボタン",
      "forms": [
        { "index": 0, "asset_id": "btn" }
      ],
      "x": 270,
      "y": 480,
      "anchor": 0.5,
      "interactive": true
    }
  ],
  "events": [
    {
      "trigger": { "type": "time", "at": 0 },
