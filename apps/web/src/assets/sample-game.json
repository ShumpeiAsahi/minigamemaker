    },
    {
      "trigger": { "type": "click", "targetId": "button" },
      "actions": [
        {
          "type": "text",
          "txt": "YOU WIN!",
          "style": { "fill": "#fff", "fontSize": 64 }
        }
      ]
    }
  ]
