{
  "meta": {
    "width": 540,
    "height": 960,
    "bgColor": "#1099bb",
    "loopMs": 4000,
    "title": "Sample Game",
    "user": { "name": "AshDeveloper", "id": null }
  },
  "assets": [
    { "id": "btn", "url": "/game_kakin.png", "name": "ボタン" }
  ],
  "objects": [
    {
      "id": "button",
      "name": "ボタン",
      "type": "asset",
      "forms": [
        { "index": 0, "name": "フォーム1", "asset_ids": ["btn"] }
      ],
      "x": 270,
      "y": 480,
      "anchor": 0.5,
      "interactive": true
    },
    {
      "id": "winText",
      "name": "勝利テキスト",
      "type": "text",
      "x": 270,
      "y": 240,
      "text": "YOU WIN!",
      "style": { "fill": "#fff", "fontSize": 64 },
      "visible": false
    }
  ],
  "events": [
    {
      "trigger": { "type": "time", "at": 0 },
      "actions": [
        { "type": "show", "target": "button" }
      ]
    },
    {
      "trigger": { "type": "time", "at": 200 },
      "actions": [
        {
          "type": "tween",
          "target": "button",
          "to": { "rotation": 6.283 },
          "dur": 2600
        }
      ]
    },
    {
      "trigger": { "type": "click", "targetId": "button" },
      "actions": [
        { "type": "show", "target": "winText" }
      ]
    }
  ]
}
